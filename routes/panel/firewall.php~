<?php

use Illuminate\Support\Facades\Route;

Route::get('/',
    [App\Http\Controllers\Admin\FirewallController::class, 'index'])
    ->can('admin', 'App\Models\User')
    ->name('admin.firewall');

Route::post('/', [App\Http\Controllers\Admin\FirewallController::class, 'save'])
    ->can('admin', 'App\Models\User')
    ->name('admin.firewall.save');

Route::get('/logs',
    [App\Http\Controllers\Admin\FirewallController::class, 'logs'])
    ->can('admin', 'App\Models\User')
    ->name('admin.firewall.logs');

Route::post('/logs/data', [App\Http\Controllers\Admin\FirewallController::class, 'logsData'])
    ->can('admin', 'App\Models\User')
    ->name('admin.firewall.logs.data');

Route::post('/whitelist', [App\Http\Controllers\Admin\FirewallController::class, 'whitelist'])
    ->can('admin', 'App\Models\User')
    ->name('admin.firewall.whitelist');
